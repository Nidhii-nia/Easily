    <div class="application-container">
        
        <!-- Job Header -->
        <div class="job-header">
            <h2 class="mb-3">
                <i class="bi bi-briefcase-fill me-2"></i>
                Apply for: <%= job.job_designation %>
            </h2>
            <div class="d-flex flex-wrap gap-3">
                <span><i class="bi bi-building me-1"></i> <%= job.company_name %></span>
                <span><i class="bi bi-geo-alt me-1"></i> <%= job.job_location %></span>
                <span><i class="bi bi-cash-coin me-1"></i> <%= job.salary %></span>
                <span><i class="bi bi-clock me-1"></i> <%= job.job_type %></span>
            </div>
        </div>

        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <!-- Application Form -->
        <form action="/job/<%= job.id %>/apply" method="POST" enctype="multipart/form-data">

            <input type="hidden" name="id" value="<%=job.id%>">
            
            <h4 class="mb-4">
                <i class="bi bi-person-circle me-2"></i>
                Personal Information
            </h4>

            <!-- Full Name -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="fullName" class="form-label ">Full Name</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" 
                            placeholder="Enter your first name">
                </div>
            </div>

            <!-- Contact Information -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="email" class="form-label ">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" 
                            placeholder="example@email.com">
                </div>
                <div class="col-md-6">
                    <label for="phone" class="form-label ">Phone Number</label>
                    <input type="tel" class="form-control" id="phone" name="phone" 
                            placeholder="+91 9876543210">
                </div>
            </div>

            <!-- Resume Upload -->
            <div class="mb-4">
                <label for="resume" class = "form-label" >Upload Resume in any of mentioned format: (.pdf,.doc,.docx,.txt,.rtf)</label>
                <input type="file" name="resume" id="resume" accept=".pdf,.doc,.docx,.txt,.rtf">
            </div>

            <!-- Terms & Submit -->
            <div class="mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="terms" id="terms">
                    <label class="form-check-label" for="terms">
                        I confirm that all information provided is accurate and complete. *
                    </label>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-5">
               <div> <a href="/job/<%= job.id %>" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to Job
                </a></div>
              <div>  <button type="submit" class="submit-btn">
                    <i class="bi bi-send-check me-2"></i> Submit Application
                </button></div>
            </div>

        </form>
    </div>